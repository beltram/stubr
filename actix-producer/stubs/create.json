{
  "request": {
    "method": "POST",
    "urlPath": "/pets",
    "bodyPatterns": [
      {
        "equalToJson": {
          "name": "new"
        }
      }
    ],
    "headers": {
      "content-type": {
        "equalTo": "application/json"
      }
    }
  },
  "response": {
    "status": 201,
    "jsonBody": {
      "id": "{{anyRegex '[0-9]+'}}",
      "name": "{{jsonPath request.body '$.name'}}"
    },
    "transformers": [
      "response-template"
    ],
    "headers": {
      "content-type": "application/json"
    }
  }
}