{
  "request": {
    "method": "POST",
    "urlPath": "/stores",
    "headers": {
      "content-type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "equalToJson": {
          "name": "new",
          "pets": [
            {
              "name": "new"
            }
          ]
        }
      }
    ]
  },
  "response": {
    "status": 201,
    "jsonBody": {
      "id": "{{anyU32}}",
      "name": "{{jsonPath request.body '$.name'}}",
      "pets": [
        {
          "id": "{{anyU32}}",
          "name": "{{jsonPath request.body '$.pets[0].name'}}"
        }
      ]
    },
    "headers": {
      "content-type": "application/json"
    },
    "transformers": [
      "response-template"
    ]
  }
}